{
  "name": "extract-dependencies-from-sources",
  "description": "Inferring dependencies from the source code of a monorepo app",
  "version": "1.0.13",
  "main": "dist/node.js",
  "repository": "https://github.com/jpb06/extract-dependencies-from-sources.git",
  "author": "jpb06 <jp.bois.06@outlook.fr>",
  "bin": {
    "extractDeps": "./cli/index.js"
  },
  "keywords": [],
  "license": "MIT",
  "dependencies": {
    "@effect/data": "^0.18.5",
    "@effect/io": "^0.40.3",
    "@effect/match": "^0.35.2",
    "@effect/platform": "^0.16.1",
    "@effect/test": "^0.1.0",
    "chalk": "4.1.2",
    "dotenv-flow": "^3.3.0",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.4",
    "yaml": "^2.3.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/dotenv-flow": "^3.3.1",
    "@types/fs-extra": "11.0.2",
    "@types/node": "^20.6.1",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vitest/coverage-v8": "^0.34.4",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.1.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.3",
    "readme-package-icons": "^1.1.8",
    "typescript": "^5.2.2",
    "vitest": "^0.34.4"
  },
  "scripts": {
    "copy-package": "copyfiles package.json ./dist/",
    "copy-readme": "copyfiles README.md ./dist/",
    "build": "del-cli ./dist && tsc --project tsconfig.prod.json",
    "postbuild": "pnpm copy-package && pnpm copy-readme",
    "lint": "eslint ./src",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "precli": "pnpm build",
    "cli": "node ./dist/cli/index.js --packagejson ./_temp/package.json --path _temp/front --path _temp/ng-back --externaldeps _temp/external-deps.yml",
    "sync-icons": "pnpm generateReadmeIcons -h 50",
    "test": "vitest",
    "test-ci": "vitest --coverage --run",
    "test-dev": "vitest --coverage",
    "test-coverage": "vitest run --coverage"
  }
}
